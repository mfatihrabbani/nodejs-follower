<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title><%= username %></title>
</head>
<body>


<h1><%= username %></h1>
<br>
<p id="id"><%= id %></p>
<br>
<p id="followers"></p>
<br>
<p id="followings"></p>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script type="text/javascript">
	async function getData(){
	const id = document.getElementById("id").value;
	const responseFollower = await axios.get(`http://localhost:3000/api/user/followerlist/${id}`);
	const responseFollowing = await axios.get(`http://localhost:3000/api/user/followinglist/${id}`);
	
		const followers = responseFollower.data.data;
		const followings = responseFollowing.data.data;

	document.getElementById("followers").innerHTML = `Followers ${followers}`
	document.getElementById("followings").innerHTML = `Followings ${followings}`
}
window.onload = getData;
</script>
</body>
</html>